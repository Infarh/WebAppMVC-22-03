@model IEnumerable<WebAppMVC.Models.Employee>
@{
    ViewBag.Title = "Сотрудники";
}

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>ДР</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var employe in Model)
    {
        <tr>
            <td>@employe.Id</td>
            <td>
                <a asp-action="Details" asp-route-id="@employe.Id">@employe.LastName</a>
            </td>
            <td>@employe.FirstName</td>
            <td>@employe.Patronymic</td>
            <td>@employe.Birthday.ToString("d")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@employe.Id">
                    <i class="fa fa-user-edit"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>