@model WebAppMVC.ViewModels.Identity.RegisterUserViewModel
@{
    ViewBag.Title = "Регистрация нового пользователя";
    Layout = "_LayoutSimple";
}

<div class="container">
    <div class="form-signin">
        <form asp-action="Register">
            <h1 class="h3 mb-3 fw-normal">Регистрация</h1>
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="form-floating">
                <input asp-for="UserName" class="form-control" placeholder="Login"/>
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        
            <div class="form-floating">
                <input asp-for="Password" class="form-control" placeholder="Login"/>
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        
            <div class="form-floating">
                <input asp-for="PasswordConfirm" class="form-control" placeholder="Login"/>
                <label asp-for="PasswordConfirm"></label>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        
            <button class="w-100 btn btn-lg btn-primary" type="submit">Регистрация</button>
        </form>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/SignInForm.css"/>
}
